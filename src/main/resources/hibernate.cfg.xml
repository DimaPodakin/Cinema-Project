<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ticket_app?serverTimezone=UTC</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.username">YOUR_USERNAME</property>
        <property name="connection.password">YOUR_PASSWORD</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="academy.model.Movie"/>
        <mapping class="academy.model.MovieSession"/>
        <mapping class="academy.model.CinemaHall"/>
        <mapping class="academy.model.User"/>
        <mapping class="academy.model.Ticket"/>
        <mapping class="academy.model.ShoppingCart"/>
        <mapping class="academy.model.Order"/>
    </session-factory>
</hibernate-configuration>
